@{
}
@model List<OrderInventory.Models.Order>
<h2>Your Orders</h2>

<div class="row">
    @foreach(var order in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="card-title">Order #@order.OrderId</h5>
                    <p class="card-text">Order date: @order.OrderDate.ToString()</p>
                    <a href="Order/ItemList/@order.OrderId">View details</a>
                    </div>
            </div>
          </div>
    }
</div>

